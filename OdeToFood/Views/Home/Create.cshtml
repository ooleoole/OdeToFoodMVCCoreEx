@model Restaurant

@{
    ViewBag.Title = "Create";
}

<h1>Create</h1>
<div>
    @using (Html.BeginForm())
    {
        <div>
            @Html.LabelFor(m => m.Name)
            @Html.EditorFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        <div>
            @Html.LabelFor(m => m.Cuisine)
            @Html.DropDownListFor(m => m.Cuisine, Html.GetEnumSelectList(typeof(CuisineType)))
            @Html.ValidationMessageFor(m => m.Cuisine)
        </div>
        <div>
            <input type="submit" name="save" Value="Save" />
        </div>
    }
</div>
<div>
    <a asp-controller="@nameof(HomeController).Replace("Controller","")" asp-action="@nameof(HomeController.Index)">Back</a>
</div>
