@model Restaurant

@{
    ViewBag.Title = "Create";
}

<h1>Create</h1>
<div>
    <form method="post" asp-antiforgery="true">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div>
            <label asp-for="Cuisine"></label>
            <select asp-for="Cuisine" asp-items="@Html.GetEnumSelectList(typeof(CuisineType))"></select>
            <span asp-validation-for="Cuisine"></span>
        </div>
        <div>
            <input type="submit" value="Save" />
        </div>
    </form>
</div>
<div>
    <a asp-controller="@nameof(HomeController).Replace("Controller","")" asp-action="@nameof(HomeController.Index)">Back</a>
</div>
